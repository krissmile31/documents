    <div class="jumbotron">
      
      <%- include('partials/header'); %>
      <% var cardClass = 'card text-left col-12 col-md-4 col-lg-3 p-0' %>
      <div class="row">
        <% console.log("indexejs"+productList) %>
        <% productList.forEach(function(product) { %>
          
          <div class="col-12 col-md-4 col-lg-3 mb-2 p-2" style="height: 280px;">
            <div class="card text-left w-100 h-100 an" style="width: 12rem;" onmouseover="document.getElementById('ft<%= productList.indexOf(product) %>').style.display = 'block'"  onmouseout="document.getElementById('ft<%= productList.indexOf(product) %>').style.display = 'none'">
              
              <div class="card-body" >
                <!--  -->
                
                <div class="card-footer" style="position: absolute; z-index: 3; display:none; margin-top: 5%;" id="ft<%= productList.indexOf(product) %>">
                  <a href="/product/<%- product.id %>" class="btn btn-success mb-1 w-100" style="background-color: rgb(122, 121, 121, 0.5); font-style: oblique;">Detail</a>
                  <% if (userID > 0 && !isAdmin) { -%>
                    <div class="btn btn-primary w-100 chooseProductButton" id="chooseProductButton-<%- product.id %>" style="background-color: rgb(122, 121, 121, 0.5); font-weight: 500;">Choose Product</div>
                    <% } else if (userID > 0) { -%>
                      <div class="btn-group w-100">
                        <a href="/product/edit/<%- product.id %>" class="btn btn-primary w-100" id="checkboxButton<%- product.id %>">Edit</a>
                        <a href="/product/delete/<%- product.id %>" class="btn btn-danger w-100" id="checkboxButton<%- product.id %>">Delete</a>
                      </div>
                      <% } -%>
                    </div>
                  </div>
                  <img src="<%= product.imageURL %>" style="max-height: 180px; width: 100%; height: auto; position: absolute; z-index: 2;">
                  <h4 class="card-title" ><%- product.name %></h4>
                  <h3><i class="fa fa-money" aria-hidden="true"></i>
                    <%= product.price %></h3>
              </div>
            </div>
        <% }); %>
        <% if (isAdmin) { -%>
          <div class="card text-left col-12 col-md-4 col-lg-3 p-0">
            <a href="/product/add" class="btn btn-primary btn-lg">Add product</a>
          </div>          
        <% } -%>
